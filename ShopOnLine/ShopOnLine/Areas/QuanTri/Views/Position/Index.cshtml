@{
    ViewBag.Title = "Danh mục chức vụ";
}
@using MvcContrib.UI.Grid;
@using C.UI.Helpers;
@using C.UI.PagedList;

<section class="content-header">
    <h1>
        Quản lý thông tin chức vụ
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li><a href="#">Quản trị</a></li>
        <li class="active">Quản lý thông tin chức vụ</li>
    </ol>
</section>

<section class="content">
    <div class="main-view box box-primary" id="formview">
        @using (Html.BeginForm())
        {
            @Html.Hidden("hdurl", "/QuanTri/Position/Index")
            @Html.Hidden("page")

            <div id="loader" class="loading loading-hide"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        @Html.Button("Thêm mới", "btn btn-primary", "Create", "fa fa-plus-square")
                        @Html.Button("Xóa", "btn btn-danger", "Delete", "fa fa-trash-o")
                    </div>
                </div>
            </div>

            <div id="PhongBan">
                @{
                    Html.RenderPartial("ListPositions", (IPagedList<C.Core.Model.qtPosition>)ViewBag.ListPositions);
                }
            </div>
        }
    </div>
</section>

@section scripts {
    <script type="text/javascript" language="javascript">

        $(document).ready(function () {

            $('#Create').click(function (e) {
                window.location.href = '@Url.Action("Create" )';
            });


        });
    </script>
}
