@model IPagedList<C.Core.Model.qtUser>
@using MvcContrib.UI.Grid;
@using C.UI.PagedList;
@using C.UI.Helpers;
@using C.Membership.Helper;
@using C.QuanTri.Helper;
@using C.Core.Service;

<div class="form-group">

    @Html.Grid(Model).Columns(column =>
        {
            column.For(m => Html.htmlCheckBox("cbxItem", m.UserId)).Attributes(style => "width:5%;text-align:center;").Named(Html.htmlCheckBox("cbxList").ToString());
            column.For(m => Html.OrderField(Model.PageNumber, Model.PageSize, Model.Count)).Named("STT").Attributes(style => "text-align:center;width:5%");
            column.Custom(@<div class="dropdown">
                <div class="sett" data-toggle="dropdown"></div>
                <ul class="dropdown-menu sett_dropdown-caret">
                    <li class="pop_arrow_new"></li>
                    @{
                        <li><a href="/QuanTri/User/Create/@item.UserId"><i class='fa fa-edit'> Hiệu chỉnh </i></a></li>
                        <li><a href="#"><i class='fa fa-tasks'> Giới hạn chức năng </i></a></li>
                        <li><a href="#"><i class='fa fa-tasks'> Phân công đơn vị </i></a></li>
                        <li><a href="#"><i class='fa fa-refresh'> Đổi mật khẩu </i></a></li>
                        <li><a href="javascript:DeleteUser(@item.UserId)"><i class='fa fa-trash-o'> Hủy kích hoạt </i></a></li>
                    }
                </ul>
            </div>).Named("Thao tác").Attributes(style => "text-align:center;width:5%");
                    column.For(m => Html.ActionLink(m.UserName, "Create", new { id = m.UserId, UnitId = m.UnitId })).Named("Tên người dùng").Attributes(style => "width:20%");
                    column.For(m => m.UserLogin).Named("Tên đăng nhập").Attributes(style => "width:15%");
                    column.For(m => Html.PositionName(m.PositionId)).Named("Chức vụ").Attributes(style => "width:15%");
                    column.For(m => Html.DepartmentName(m.DepartmentId)).Named("Thuộc phòng ban").Attributes(style => "width:15%");
                    column.For(m => Html.UnitName(m.UnitId)).Named("Thuộc đơn vị").Attributes(style => "width:15%");
                    column.For(m => m.Status.Value ? "Hoạt động" : "Không hoạt động").Named("Trạng thái").Attributes(style => "width:10%");
                }).RenderUsing(new CustomHtmlTableGridRenderer<C.Core.Model.qtUser>(C.Core.Common.Config.PAGE_SIZE_10)).Attributes(style => "width:100%").Empty("Chưa có dữ liệu")
</div>

<div class="form-group">
    @Html.PagedListPager(Model, page => "javascript:changepage(" + page + ")", PagedListRenderOptions.ClassicCustomPage)
</div>

<script type="text/javascript">

    if ('@Model.Count' > 0)
    {
        $('.grid tbody tr').first().addClass('active');

        $('.grid tbody tr').on('click', function (e) {
            $('.grid tbody tr').removeClass('active');
            $(this).addClass('active');
        });
    }

    function changepage(page) {
        $("#loader").fadeIn();

        $.ajax({
            url: '@Url.Action("ListUsers")',
            data: {
                page: page,
                UnitId: $('#UnitId').val(),
                DepartmentId: $('#DepartmentId').val(),
                TenNguoiDung: $('#TenNguoiDung').val()
            },
            type: "POST",
            dataType: "html",
            success: function (data, textStatus) {
                $('#NguoiDung').html(data);
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {

            },
            complete: function (data) {
                $("#loader").fadeOut();
            }
        });

    }

