@model IPagedList<C.Core.Model.qtPosition>
@using MvcContrib.UI.Grid;
@using C.UI.PagedList;
@using C.UI.Helpers;
@using C.Membership.Helper;
@using C.QuanTri.Helper;
@using C.Core.Service;

<div class="form-group">

    @Html.Grid(Model).Columns(column =>
            {
                column.For(m => Html.htmlCheckBox("cbxItem", m.PositionId)).Named(Html.htmlCheckBox("cbxList").ToString()).Attributes(style => "width:5%;text-align:center;");
                column.For(m => Html.OrderField(Model.PageNumber, Model.PageSize, Model.Count)).Named("STT").Attributes(style => "text-align:center;width:5%");
                column.Custom(@<div class="dropdown">
                    <div class="sett" data-toggle="dropdown"></div>
                    <ul class="dropdown-menu sett_dropdown-caret">
                        <li class="pop_arrow_new"></li>
                        @{
                            <li><a href="/QuanTri/Position/Create/@item.PositionId"><i class='fa fa-edit'> Hiệu chỉnh </i></a></li>
                            <li><a href="javascript:DeleteUser(@item.PositionId)"><i class='fa fa-trash-o'> Xóa </i></a></li>
                        }
                    </ul>
                </div>).Named("Thao tác").Attributes(style => "text-align:center;width:5%");
                        column.For(m => m.PositionName).Named("Tên phòng ban").Attributes(style => "width:15%");
                        column.For(m => m.Code).Named("Thuộc đơn vị").Attributes(style => "width:20%");
                        column.For(m => m.SortOrder).Named("Địa chỉ").Attributes(style => "width:15%");
                        column.For(m => m.Status.Value ? "Hoạt động" : "Không hoạt động").Named("Trạng thái").Attributes(style => "width:10%");
                    }).RenderUsing(new CustomHtmlTableGridRenderer<C.Core.Model.qtPosition>(C.Core.Common.Config.PAGE_SIZE_10)).Attributes(style => "width:100%").Empty("Chưa có dữ liệu")

</div>

<div class="form-group">
    @Html.PagedListPager(Model, page => "javascript:changepage(" + page + ")", PagedListRenderOptions.ClassicCustomPage)
</div>

<script type="text/javascript">

    if ('@Model.Count' > 0)
    {
        $('.grid tbody tr').first().addClass('active');

        $('.grid tbody tr').on('click', function (e) {
            $('.grid tbody tr').removeClass('active');
            $(this).addClass('active');
        });
    }

    function changepage(page) {
        $("#loader").fadeIn();

        $.ajax({
            url: '@Url.Action("ListDepartments")',
            data: {
                page: page,
            },
            type: "POST",
            dataType: "html",
            success: function (data, textStatus) {
                $('#PhongBan').html(data);
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {

            },
            complete: function (data) {
                $("#loader").fadeOut();
            }
        });
    }

