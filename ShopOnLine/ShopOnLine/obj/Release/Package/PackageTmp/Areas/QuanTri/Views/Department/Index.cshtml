@{
    ViewBag.Title = "Danh mục phòng ban";
}


@using MvcContrib.UI.Grid;
@using C.UI.Helpers;
@using C.UI.PagedList;
<section class="content-header">
    <h1>
        Quản lý thông tin phòng ban
