@model C.Core.Model.shOrder
<div id="shOrder">
    @using (Html.BeginForm(null, null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.Hidden("OrderGuid")
        <div class="container col-md-12">
            <div class="form-horizontal">

                <div class="form-group">
                    @Html.Label("Trạng thái đơn hàng: ") (<span class="required">*</span>)
                    @Html.DropDownList("OrderStatus", null, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.Label("Mô tả hình thức: ")
                    (<span class="required">*</span>)
                    @Html.TextArea("Description", null, new { @class = "form-control" })
                </div>


                <div class="float-right">
                    <button type="button" class="btn btn-danger" onclick="HuyBo()">Hủy Bỏ</button>
                    <button type="button" class="btn btn-primary" onclick="GhiLai()">Ghi lại</button>
                </div>
            </div>
        </div>
    }
</div>
<script>

    function HuyBo() {
        $('#OrderGuid').val('');
        $('#dialog-Order').modal('toggle');
    }

    function GhiLai() {

        if ($('#shOrder form').valid()) { // submit trước khi nhảy vào hàm
            $('#loader').fadeIn('slow');


            /// check số lượng tồn all các loại hàng hóa thỏa mãn điều kiện rồi mới được xử lý đơn hàng
            $.ajax({
                url: '@Url.Action("CheckOrderProcessing")',
                data: {
                    OrderGuid: $('#shOrder #OrderGuid').val(),
                    OrderStatus: $('#shOrder #OrderStatus').val(),
                    Description: $('#shOrder #Description').val(),
                },
                type: 'POST',
                dataType: "json",
                success: function (data) {
                    if (data != 'OK') {
                        alert(data);
                        return;
                    }
                    else {
                        // thỏa mãn điều kiện
                        $.ajax({
                            url: '@Url.Action("OrderProcessing")',
                            data: {
                                OrderGuid: $('#shOrder #OrderGuid').val(),
                                OrderStatus: $('#shOrder #OrderStatus').val(),
                                Description: $('#shOrder #Description').val(),
                            },
                            type: 'POST',
                            dataType: "json",
                            success: function (data) {
                                $('#dialog-Order').modal('toggle');
                                window.location.reload();
                            },
                            complete: function (data) {
                                $('#loader').fadeOut('fast');
                            }
                        });
                    }

                },
                complete: function (data) {
                    $('#loader').fadeOut('fast');
                },
                error: function (data) {
                    $('#loader').fadeOut('fast');
                }
            });




        }
    }
</script>