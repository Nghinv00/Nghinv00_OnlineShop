    function donmuahang(div) {
        $('.titleL').text('Đơn hàng Của Tôi')
        $('.titleR').text('')

        $('.menuCategory ul li a').removeClass('current');
        $(this).addClass('current');

        $.ajax({
            url: '@Url.Action("Order")',
            data: { },
            type: 'POST',
            dataType: "html",
            success: function (data) {
                $('#Member').html(data);
            },
            complete: function (data) {

            },
            error: function (data) {
                $("#Member").html("Dữ liệu không tìm thấy")
            }
        });
    }

    function thongbao() {
        $.ajax({
            url: '@Url.Action("ThongBao")',
            data: {

            },
            type: 'POST',
            dataType: "html",
            success: function (data) {
                $('#Member').html(data);
            },
            complete: function (data) {

            },
            error: function (data) {
                $("#Member").html("Dữ liệu không tìm thấy")
            }
        });
    }

    $(document).ready(function () {



      

    });
</script>


<style>
    div#info {
    }

    div#avatar {
        float: left;
        margin-left: 15px;
        position: absolute;
        border-radius: 50%;
        height: 60px;
        width: 60px;
        border: 1px solid #cccccc;
    }

    div#infor {
        margin-left: 100px;
    }

    div#border i {
        margin: 20% 0 0 25%;
        font-size: 30px;
        color: #cccccc;
    }

    div#border img {
        color: #cccccc;
        border-radius: 50%;
        width: 60px;
        height: 60px;
        position: absolute;
        float: left;
        top: 0;
        left: 0;
    }

    .menuCategory {
        border-top: 1px solid #cccccc;
    }

    .imageFile {
        width: 150px !important;
        height: 150px !important;
    }

    img#img-file {
        width: 100%;
        height: 100%;
        border-radius: 50%;
    }

    /*.form-group {
        margin-bottom: 50px !important;
    }*/
    .no-padding {
        padding: 0px !important;
    }

    .error, .required {
        color: red;
    }
</style>
