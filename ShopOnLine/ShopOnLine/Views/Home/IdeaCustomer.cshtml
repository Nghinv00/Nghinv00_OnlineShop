@using C.Core.Model;
@model IEnumerable<shIdeaCustomer>
<div id="idea-child">
    <div class="wrapper">
        <div class="idea_title">
            Ý kiến
            <span>khách hàng</span>
        </div>
        <div class="slider_idea">
            <div id="slider_idea">
                @{
                    if (Model != null && Model.Count() > 0)
                    {
                        foreach (var item in Model as IEnumerable<shIdeaCustomer>)
                        {
                            <div class="item">
                                <div class="i-image">
                                    <div class="w-images">
                                        <img src="@item.Image"
                                             alt='@item.Name' title='@item.Name' />
                                    </div>
                                </div>
                                <div class="i-description">
                                    <div class="i-content">
                                        <span style="color: rgb(34, 34, 34); font-family: Arial, Verdana, sans-serif; font-size: 12px; line-height: normal;">
                                            @item.Contents
                                        </span>
                                    </div>
                                    <div class="i-name">@item.Name</div>
                                </div>
                                <div class="clear"></div>
                            </div>
                        }
                    }
                }
            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="linkScroll" data-href="#Svnt-dealer"></div>
</div>
